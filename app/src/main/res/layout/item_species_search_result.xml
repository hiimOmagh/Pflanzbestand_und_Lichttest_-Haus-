<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/species_category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/species_search_icon_category"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/species_common_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/species_scientific_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/species_category_chip"
                style="@style/Widget.MaterialComponents.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:checkable="false"
                android:clickable="false"
                android:focusable="false"
                app:chipIconVisible="false"
                app:chipStrokeWidth="0dp"
                app:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/species_icon_watering"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/species_search_icon_watering"
                android:src="@drawable/ic_care_water_drop"
                android:tint="?attr/colorSecondary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/species_icon_temperature"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/species_search_icon_temperature"
                android:src="@drawable/ic_care_temperature"
                android:tint="?attr/colorSecondary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/species_icon_humidity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/species_search_icon_humidity"
                android:src="@drawable/ic_care_humidity"
                android:tint="?attr/colorSecondary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/species_icon_toxicity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/species_search_icon_toxicity"
                android:src="@drawable/ic_care_toxic"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
