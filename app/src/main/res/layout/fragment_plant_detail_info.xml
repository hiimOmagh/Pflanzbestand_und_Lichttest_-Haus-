<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    android:padding="16dp"
    tools:context=".PlantDetailInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/detail_metadata_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Aloe Vera" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Succulent that prefers bright indirect light." />

            <TextView
                android:id="@+id/detail_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                tools:text="Aloe barbadensis" />

            <TextView
                android:id="@+id/detail_location_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="16sp"
                tools:text="South-facing window" />

            <TextView
                android:id="@+id/detail_acquired_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="16sp"
                tools:text="Acquired Jan 5, 2024" />

            <TextView
                android:id="@+id/detail_light_meter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="@string/light_meter_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/detail_light_meter_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/detail_ambient_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_ambient_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/light_meter_ambient_label"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_ambient_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="@string/light_meter_lux_placeholder"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/detail_ambient_band"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/light_meter_band_placeholder"
                        android:textSize="14sp" />
                </LinearLayout>

                <Space
                    android:id="@+id/detail_light_meter_spacer"
                    android:layout_width="16dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:id="@+id/detail_camera_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_camera_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/light_meter_camera_label"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_camera_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="@string/light_meter_camera_placeholder"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/detail_camera_band"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="@string/light_meter_band_placeholder"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/detail_light_meter_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/light_meter_ev100_note"
                android:textSize="12sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detail_species_metadata_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_card_margin_top"
                android:visibility="gone"
                app:cardUseCompatPadding="true"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/care_card_padding">

                    <TextView
                        android:id="@+id/detail_species_metadata_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metadata_card_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Species insights" />

                    <LinearLayout
                        android:id="@+id/detail_watering_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_watering_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/metadata_section_watering"
                            android:src="@drawable/ic_care_water_drop" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_watering_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/metadata_section_watering"
                                android:textStyle="bold"
                                tools:text="Watering" />

                            <TextView
                                android:id="@+id/detail_watering_frequency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                tools:text="Allow soil to dry" />

                            <TextView
                                android:id="@+id/detail_watering_soil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:visibility="gone"
                                tools:text="Preferred soil: Well-draining mix"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/detail_watering_tolerance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:visibility="gone"
                                tools:text="Tolerance: Moderate"
                                tools:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_temperature_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_temperature_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/metadata_section_temperature"
                            android:src="@drawable/ic_care_temperature" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_temperature_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/metadata_section_temperature"
                                android:textStyle="bold"
                                tools:text="Temperature" />

                            <TextView
                                android:id="@+id/detail_temperature_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                tools:text="18–29°C" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_humidity_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_humidity_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/metadata_section_humidity"
                            android:src="@drawable/ic_care_humidity" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_humidity_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/metadata_section_humidity"
                                android:textStyle="bold"
                                tools:text="Humidity" />

                            <TextView
                                android:id="@+id/detail_humidity_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                tools:text="40–70%" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_toxicity_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_toxicity_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/metadata_section_toxicity"
                            android:src="@drawable/ic_care_toxic" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_toxicity_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/metadata_section_toxicity"
                                android:textStyle="bold"
                                tools:text="Toxicity" />

                            <TextView
                                android:id="@+id/detail_toxicity_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                tools:text="Toxic to pets" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detail_care_tips_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_care_tips_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/metadata_section_care_tips"
                            android:src="@drawable/ic_care_trending_up" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_care_tips_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/metadata_section_care_tips"
                                android:textStyle="bold"
                                tools:text="Care tips" />

                            <TextView
                                android:id="@+id/detail_care_tips_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                tools:text="• Rotate weekly\n• Mist occasionally" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_metadata_unavailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_card_section_spacing"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="italic"
                        android:visibility="gone"
                        tools:text="Metadata unavailable"
                        tools:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detail_care_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_card_margin_top"
                android:visibility="gone"
                app:cardUseCompatPadding="true"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/care_card_padding">

                    <TextView
                        android:id="@+id/detail_care_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/care_recommendations_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/detail_care_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/care_card_section_spacing"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/care_recommendations_loading"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_care_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/care_card_section_spacing"
                        android:text="@string/care_recommendations_empty"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/detail_care_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="@dimen/care_card_section_spacing"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_care_recommendation" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <Button
            android:id="@+id/detail_environment_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/action_view_environment_log"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_metadata_container"
            tools:text="Environment Log" />

        <Button
            android:id="@+id/detail_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/action_view_diary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_environment_log"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
