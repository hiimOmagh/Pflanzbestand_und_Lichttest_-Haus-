<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/plant_list_item_horizontal_padding"
        android:paddingTop="@dimen/plant_list_item_vertical_padding"
        android:paddingEnd="@dimen/plant_list_item_horizontal_padding"
        android:paddingBottom="@dimen/plant_list_item_vertical_padding">

        <TextView
            android:id="@+id/species_detail_scientific_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <TextView
            android:id="@+id/species_detail_growth_habit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:id="@+id/species_detail_light_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/species_detail_section_light"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_light_seedling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_light_vegetative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_light_flower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_light_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/species_detail_light_fallback"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metadata_section_watering"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_watering_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_watering_soil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_watering_tolerance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/species_detail_watering_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/metadata_watering_frequency_fallback"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metadata_section_temperature"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_temperature_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metadata_section_humidity"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_humidity_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/species_detail_section_pet_safety"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_pet_safety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:layout_marginBottom="@dimen/care_card_section_spacing"
            app:thickness="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metadata_section_care_tips"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/species_detail_care_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <TextView
            android:id="@+id/species_detail_sources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/care_card_section_spacing"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
