<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/environment_charts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/environment_log_charts_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/environment_chart_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/environment_log_chart_overview_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <TextView
                android:id="@+id/environment_chart_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/environment_log_chart_placeholder"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                tools:text="@string/environment_log_chart_placeholder_with_data" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/environment_chart_trends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/environment_log_chart_trends_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <TextView
                android:id="@+id/environment_chart_trends_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/environment_log_chart_trends_placeholder"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                tools:text="@string/environment_log_chart_trends_placeholder" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
