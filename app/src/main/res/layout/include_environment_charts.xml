<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/environment_charts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/environment_log_charts_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/environment_chart_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/environment_log_chart_overview_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <de.oabidi.pflanzenbestandundlichttest.common.ui.LineChartView
                android:id="@+id/environment_chart_overview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/environment_chart_default_content_description"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/environment_chart_overview_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/environment_log_growth_chart_empty"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/environment_chart_trends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/environment_log_chart_trends_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

            <de.oabidi.pflanzenbestandundlichttest.common.ui.LineChartView
                android:id="@+id/environment_chart_trends"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/environment_chart_default_content_description"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/environment_chart_trends_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/environment_log_climate_chart_empty"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/environment_photo_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/environment_log_photo_section_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

    <TextView
        android:id="@+id/environment_photo_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/environment_log_photo_empty"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        tools:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/environment_photo_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingBottom="8dp"
        android:visibility="gone"
        tools:listitem="@layout/item_environment_photo_preview"
        tools:visibility="visible" />
</LinearLayout>
