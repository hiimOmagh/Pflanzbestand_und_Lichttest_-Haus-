<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/diary_entry_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/diary_entry_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/diary_hint_note"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/diary_entry_remind_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_remind_days"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/diary_entry_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />

    <Button
        android:id="@+id/diary_entry_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_add_photo" />
</LinearLayout>
