<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plant_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/light_hours_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lux_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Lux: --"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ppfd_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PPFD: --"
        app:layout_constraintStart_toStartOf="@id/lux_value"
        app:layout_constraintTop_toBottomOf="@id/lux_value" />

    <TextView
        android:id="@+id/dli_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DLI: --"
        app:layout_constraintStart_toStartOf="@id/ppfd_value"
        app:layout_constraintTop_toBottomOf="@id/ppfd_value" />

    <TextView
        android:id="@+id/k_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_calibration"
        app:layout_constraintStart_toStartOf="@id/dli_value"
        app:layout_constraintTop_toBottomOf="@id/dli_value" />

    <EditText
        android:id="@+id/k_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="4"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@id/k_label"
        app:layout_constraintStart_toEndOf="@id/k_label" />

    <TextView
        android:id="@+id/hours_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_light_hours"
        app:layout_constraintStart_toStartOf="@id/k_label"
        app:layout_constraintTop_toBottomOf="@id/k_label" />

    <EditText
        android:id="@+id/light_hours_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="4"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@id/hours_label"
        app:layout_constraintStart_toEndOf="@id/hours_label" />
</androidx.constraintlayout.widget.ConstraintLayout>
