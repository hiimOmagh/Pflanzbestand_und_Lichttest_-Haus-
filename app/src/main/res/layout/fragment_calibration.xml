<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calibration_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/calibration_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calibration_lux_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lux_placeholder"
        app:layout_constraintStart_toStartOf="@id/calibration_instructions"
        app:layout_constraintTop_toBottomOf="@id/calibration_instructions" />

    <TextView
        android:id="@+id/calibration_ppfd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/label_known_ppfd"
        app:layout_constraintStart_toStartOf="@id/calibration_lux_value"
        app:layout_constraintTop_toBottomOf="@id/calibration_lux_value" />

    <EditText
        android:id="@+id/calibration_ppfd_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:digits="0123456789."
        android:ems="4"
        android:hint="@string/hint_positive_number"
        android:inputType="numberDecimal"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/calibration_ppfd_label"
        app:layout_constraintStart_toEndOf="@id/calibration_ppfd_label" />

    <Button
        android:id="@+id/calibration_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/action_calibrate"
        app:layout_constraintStart_toStartOf="@id/calibration_ppfd_label"
        app:layout_constraintTop_toBottomOf="@id/calibration_ppfd_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
